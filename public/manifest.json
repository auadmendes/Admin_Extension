{
  "manifest_version": 3,
  "name": "Admin Console",
  "version": "3.5.0",
  "icons": {
    "16": "images/TGreen.png",
    "32": "images/TGreen.png",
    "48": "images/TGreen.png",
    "128": "images/TGreen.png"
},

  "action": { "default_popup": "index.html" },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "webRequest",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "pages/background/service-worker.js"
  },
  
  "host_permissions": [
    "https://*/*",
    "https://trustly.one/admin-console/*",
    "http://*/*"
  ],
  "optional_permissions": [
    "topSites"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "match_about_blank": true,
      "css": ["pages/content/style.css"],
      "js": [
        "content.ts",
        "pages/content/index.ts",
        "pages/content/toast.ts",
        "pages/content/payment.ts",
        "pages/content/changeLogo.ts",
        "pages/content/groupAction.ts",
        "pages/content/buttonTransactionPage.ts",
        "pages/utils/action_button/create-poa.ts",
        "pages/utils/action_button/check-collections.ts",
        "pages/utils/service_worker_functions/index.ts",
        "pages/utils/count_button/count-button.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon.png",  
        "images/trustly_logo.png",
        "images/trustlyGreen.png",
        "images/tea.png",
        "images/icon_filters.png",
        "images/icon_check.png",
        "images/copy.png",
        "images/visible.png",
        "images/copy_selected_icon.png",
        "images/copy_all_icon.png",
        "images/document.png",
        "images/collections_price.png",
        "images/arrow_down.png",
        "images/loadingIcon.gif"
      ],
      "matches": ["<all_urls>"]
    }, 
    {
      "resources": ["images/icon.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "options_page": "pages/Options/index.html"

}